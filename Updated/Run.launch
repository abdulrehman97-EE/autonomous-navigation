<launch>
   <master auto="start"/>
   
<!-- Starting rosaria driver for motors and encoders -->
  <node name="rosaria" pkg="rosaria" type="RosAria" args="_port:=/dev/ttyUSB0">
  <param name="publish_aria_lasers" value="True"/>
  <remap from="rosaria/cmd_vel" to="cmd_vel"/>
  <remap from="rosaria/pose" to="odom"/>
  <remap from="rosaria/lms5XX_1_laserscan" to="scan"/>
  <remap from="rosaria/lms5XX_1_pointcloud" to="pointcloud"/>
  </node>

 
<!--- Run Slam Gmapping -->
  <node name="gslam" pkg="gmapping" type="slam_gmapping" args="scan:=scan">
  <param name="map_update_interval" value="1"/>
  <param name="delta" value="0.05"/>
  <param name="particles" value="30"/>
  <param name="xmin" value="20"/>
  <param name="ymin" value="20"/>


 </node>
<!--- Run MoveBase -->
 
 <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find p3dx_navigation)/launch/costmap_common_params.yaml" command="load" ns="global_costmap" /> 
    <rosparam file="$(find p3dx_navigation)/launch/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find p3dx_navigation)/launch/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find p3dx_navigation)/launch/global_costmap_params.yaml" command="load" /> 
    <rosparam file="$(find p3dx_navigation)/launch/base_local_planner_params.yaml" command="load" />
    <rosparam file="$(find p3dx_navigation)/launch/move_base_params.yaml" command="load" />
    
 </node>
    
<!--- Run Exploration -->
 
 <node pkg="explore_lite" type="explore" respawn="false" name="explore" output="screen">
  <param name="robot_base_frame" value="base_link"/>
  <param name="costmap_topic" value="map"/>
  <param name="costmap_updates_topic" value="map_updates"/>
  <param name="visualize" value="true"/>
  <param name="planner_frequency" value="0.33"/>
  <param name="progress_timeout" value="30.0"/>
  <param name="potential_scale" value="3.0"/>
  <param name="orientation_scale" value="0.0"/>
  <param name="gain_scale" value="1.0"/>
  <param name="transform_tolerance" value="0.3"/>
  <param name="min_frontier_size" value="0.75"/>
 
 </node>
</launch> 
